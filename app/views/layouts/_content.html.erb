<div x-ng-app="items_app">

  <div x-ng-controller="ItemCtrl">

    <ul class="example-orbit" data-orbit >
        <li class="" x-ng-repeat="item in items track by $index">
          <img x-ng-src="{{ item.images[0].full }}" />
          <div class="orbit-caption">
            {{item.heading}}
            Price: ${{item.price}}
            Location: {{item.cityName}}
            <div 
              <input type="button" x-ng-click="addFavorite(item)" style="width: 60px; height: 30px; overflow: hidden; background-image:url(http://i.imgur.com/JGBsx8v.png); background-repeat:no-repeat"><a href="#"></a>
          </div>
        </li>
    </ul>

  </div>

</div>

