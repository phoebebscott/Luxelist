<div x-ng-app="items_app">

  <div x-ng-controller="ItemCtrl">
    <div id="myModal2" class="reveal-modal" data-reveal>
    <%= render 'favorites/show' %>
    <a class="close-reveal-modal">&#215;</a>
    </div>

    <ul class="example-orbit" data-orbit >
        <li class="" x-ng-repeat="item in items track by $index">
            <img x-ng-src="{{ item.images[0].full }}" />

          <div class="orbit-caption">
            {{item.heading}}
            Price: ${{item.price}}
            Location: {{item.cityName}}
          <br>
          <div>
            <input class="top-bar-button" type="button" value="Favorite!" x-ng-click="addFavorite(item)">
            <a href="{{item.external_url}}" target="_blank"><input class="top-bar-button" type="button" value="View on Craig's List"></a>
          </div>

          </div>
          <br>

        </li>
    </ul>
    <ul class="example-orbit" data-orbit >
        <li class="" x-ng-repeat="favorite in favoritesAll track by $index">
            <a href="#" data-reveal-id="myModal2"><img x-ng-src="{{ favorite.image_url }}" /></a>

          <div class="orbit-caption">
            {{favorite.heading}}
          <br>

          </div>
          <br>

        </li>
    </ul>

</div>
</div>
