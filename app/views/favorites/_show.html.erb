<div x-ng-app="items_app">

  <div x-ng-controller="ItemCtrl">

	<div class="" x-ng-repeat="favorite in favoritesAll track by $index">
	    <div>
	    	<h3>{{favorite.heading}}</h3>
	    </div>
	   	<div>
	   	   <img x-ng-src="{{ favorite.image_url }}" />
	   	</div>
		<div>
			<h4>Price: ${{favorite.price}}</h4>
		</div>
	   	<div>
	   		<h4>Location: {{favorite.cityName}}</h4>
	   	</div>
	</div>

  </div>

</div>

<br>
<a href="{{item.external_url}}" target="_blank"><input class="top-bar-button" type="button" value="View on Craig's List"></a>





